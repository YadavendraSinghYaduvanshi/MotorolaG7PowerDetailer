<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.rearCamera.RearCameraFunctionFargment"
    android:background="@drawable/smart_camera_function_screen"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:weightSum="9"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/high_resolution_zoom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/high_resolution_zoom"/>

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/portrait_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/portrait_mode"/>

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/spot_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/spot_color"/>


            <!--<ImageView-->
                <!--android:layout_marginBottom="@dimen/margin_bottom"-->
                <!--android:id="@+id/beautification_mode"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:src="@drawable/beautification_mode"/>-->

            <ImageView
                android:layout_marginBottom="@dimen/margin_bottom"
                android:id="@+id/cinemagraph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/cinemagraph"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>